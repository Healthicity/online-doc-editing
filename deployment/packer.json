{
  "variables": {
    "ENV": "{{ env `ENV` }}",
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "commit": "{{ env `CI_COMMIT_SHORT_SHA` }}"
  },
  "builders" : [
    {
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64*",
          "root-device-type": "ebs"
        },
        "most_recent": true,
        "owners": [
          "099720109477"
        ]
      },
      "type": "amazon-ebs",
      "region": "us-east-1",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "{{ user `ENV` }}-{{ user `commit` }}-app-image",
      "encrypt_boot": "true"
    }
  ],
  "provisioners" : [
    {
      "type": "shell",
      "inline": ["mkdir -p ~/io_api/node_modules/"]
    },
    {
      "type": "file",
      "source": "./",
      "destination": "~/io_api"
    },
    {
      "type": "shell",
      "inline": [
        "rm -rf ~/io_api/node_modules/",
        "curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash -",
        "sudo apt install nodejs awscli jq -y",
        "cd io_api/",
        "npm install --no-optional",
        "npm install nodemon"
      ]
    }
  ]
}
